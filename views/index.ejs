<% layout("main") %>

<% for(var i in news) {%>

	<div class="col-xs-12 post">
		<div class="col-xs-5">
			<div>
			<img src="/image/<%= news[i].image %>" >
			</div>
			<div class="left"><%= news[i].datePublisher %></div>
		</div>
		<div class="col-xs-7">
			<h3 class="page-header"><a href="/view/<%= news[i].URN %>"><%= news[i].title %></a></h3>
			<p><%= news[i].newsShort %></p>
		</div>
	</div>
	
<% } %>