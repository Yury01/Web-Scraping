<% layout("main") %>

<h2 class="page-header ctr">Авторизация</h2>

  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-default login-panel">
      <div class="panel-heading">
        <h3 class="panel-title">Пожалуйста, войдите</h3>
      </div>
    <div class="panel-body">
            <% if (message != null) { %>
          <div class="alert-danger"><%= message %></div>
        <% } %>        
    <form action="/login" method="post">
    <fieldset>
      <div class="form-group">
        <label>Логин</label>
        <input class="form-control" placeholder="Логин" name="login" type="text">
      </div>
      <div class="form-group">
          <label>Пароль</label>
          <input class="form-control" placeholder="Пароль" name="password" type="password" value="">
      </div>
      <input class="btn btn-lg btn-primary btn-block" type="submit" value="Вход" />
    </fieldset>
    </form>
    </div>
    </div>
 </div>

<div class="col-md-4 col-md-offset-4"> Нет аккаунта? <a href="/signup"> Регистрация</a></div>
      
